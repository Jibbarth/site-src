{# templates/components/achievement_badge.html.twig #}
{% props badge %}

<div class="group relative flex flex-col items-center w-32">
    <div class="relative h-24 w-24 overflow-hidden rounded-full border-2 border-border bg-secondary shadow-sm transition-transform duration-300 group-hover:scale-110 group-hover:border-primary/50 group-hover:shadow-lg">
        <img src="{{ asset(badge.image) }}" alt="{{ badge.name }}" class="h-full w-full object-cover" loading="lazy">
    </div>
    
    <a href="{{ badge.link }}" target="_blank" rel="noopener noreferrer" class="mt-3 text-center w-full group-hover:text-primary transition-colors focus:outline-none">
        <span class="block text-xs font-semibold text-foreground line-clamp-2 leading-tight" title="{{ badge.name }}">{{ badge.name }}</span>
        <span class="block text-[10px] text-muted-foreground mt-0.5 truncate">{{ badge.category }}</span>
        <span class="absolute inset-0 rounded-lg"></span> {# Click target #}
    </a>
</div>
