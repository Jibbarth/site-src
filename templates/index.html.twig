{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>ðŸš§ jibbarth.github.io ðŸš§</h1>
    <ul>
        {% for project in projects %}
            <li>
                <a href="{{ project.url }}">{{ project.name }}</a>
            </li>
        {% endfor %}
    </ul>

    <p>Writing</p>
    <ul>
        {% for article in articles %}
            {#{% set url = path('article_detail', {slug: 'article.slug'}) %}#}
            {% set url = '#' %}
            {% if article.content is null and article.url is not null %}
                {% set url = article.url %}
            {% endif %}
            <li>
                <a href="{{ url }}">{{ article.date|format_date('short', locale='fr') }} - {{ article.title }}</a>
            </li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
