{% for certif in data %}
    <div class="inline-flex items-center gap-2 px-3 py-1 rounded-full bg-accent text-accent-foreground text-xs font-medium mb-4">
        {{ certif }}
        <span class="relative flex h-2 w-2">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-blue-400 opacity-75"></span>
            <span class="relative -left-1/4 -top-1/4 inline-flex rounded-full h-4 w-4">{{ ux_icon('lets-icons:check-fill', { class: 'text-blue-500'}) }}</span>
        </span>
    </div>
{% endfor %}
