{% extends 'base.html.twig' %}

{% block title %}ðŸ’» Projects // {{ author }}{% endblock %}
{% block description %}Projects by {{ author }}{% endblock %}
{% block meta_image %}{{ unsplash_url('project', 600, 300) }}{% endblock %}
{% block header_image %}
    {% set banner = unsplash_photo('project', 1600, 300) %}
    <img
        class="absolute inset-0 w-full h-full object-cover opacity-20"
        src="{{ banner.blurhash }}"
        {{ stimulus_controller('symfony/ux-lazy-image/lazy-image', {
            src: banner.fullUrl
        }) }}
        alt="Banner image for this project list, an unsplash image with Project theme">
{% endblock %}

{% block sub_profile %}
    <div class="text-center">
        <h1 class="block text-foreground text-3xl md:text-5xl font-bold mb-2 tracking-tight">My Projects ðŸ’»</h1>
    </div>
{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <div class="max-w-5xl mx-auto space-y-16">

            {% if featured_projects|length > 0 %}
            <section>
                <div class="mb-8 pb-4 border-b border-border">
                    <h2 class="text-3xl font-bold tracking-tight text-foreground">Featured Projects</h2>
                    <p class="text-muted-foreground mt-1">Packages I'm proud to be part in</p>
                </div>

                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    {% for project in featured_projects %}
                        <twig:project_card project="{{ project }}" />
                    {% endfor %}
                </div>
            </section>
            {% endif %}

            {% if old_projects|length > 0 %}
            <section>
                <div class="mb-8 pb-4 border-b border-border">
                    <h2 class="text-3xl font-bold tracking-tight text-foreground">Old Stuff</h2>
                    <p class="text-muted-foreground mt-1">Old projects created a while ago, experiments, web design integration...</p>
                </div>

                 <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    {% for project in old_projects %}
                        <twig:project_card project="{{ project }}" />
                    {% endfor %}
                </div>
            </section>
            {% endif %}

            <div class="pt-8 border-t border-border">
                 {{ include('_partials/back_home.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
