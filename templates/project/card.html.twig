<div class="w-full sm:w-1/2 md:w-1/3 mb-4 sm:px-2">
    <div class="bg-secondary sm:rounded-sm h-full overflow-hidden shadow-sm flex flex-col">

        <img
            class="h-64 md:h-40 w-full object-cover object-center"
            {% if project.image is not null %}
            src="{{ project.image }}"
            {% else %}
                {% set projectImage = unsplash_photo(project.name ~',programming', 300, 300) %}
                src="{{ projectImage.blurhash }}"
                {{ stimulus_controller('symfony/ux-lazy-image/lazy-image', {
                    src: projectImage.fullUrl
                }) }}
            {% endif %}
            alt="{{ project.name }}"
            loading="lazy">
        <div class="p-4 pb-0 grow">
            <a href="{{ project.url}}"
               target="_blank" rel="noopener,noreferrer"
               class="block text-center text-foreground hover:text-primary font-semibold mb-2 text-lg">
                {{ project.name }}
            </a>
            <div class="text-muted-foreground text-sm leading-relaxed block md:text-xs lg:text-sm">
                {{ project.description }}
            </div>
        </div>
        <div class="w-full pt-4 pb-2 text-center">
            {% set classes = 'text-destructive border-destructive hover:bg-destructive hover:text-destructive-foreground' %}
            {% if project.role == constant('App\\Constant\\Role::CONTRIBUTOR') %}
                {% set classes = 'text-green-600 border-green-600 hover:bg-green-600 hover:text-white' %}
            {% elseif project.role == constant('App\\Constant\\Role::MAINTENER') %}
                {% set classes = 'text-primary border-primary hover:bg-primary hover:text-primary-foreground' %}
            {% elseif project.role == constant('App\\Constant\\Role::FRONT_END') %}
                {% set classes = 'text-purple-600 border-purple-600 hover:bg-purple-600 hover:text-white' %}
            {% endif %}
            <p class="inline-block
                    text-xs mr-2 my-1 uppercase tracking-wider border px-2
                     {{ classes }} cursor-default">
                {{ project.role }}
            </p>
        </div>
    </div>
</div>
